{
  "name": "nuxts-otp-boilerplate",
  "version": "1.0.0",
  "description": "Basic JWT authentication using NuxtJS",
  "author": "Rei Allen Ramos",
  "private": true,
  "scripts": {
    "nuxt-dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "storage-dev": "docker-compose up redis mongo mongo-express",
    "docker-dev": "concurrently \"npm run storage-dev\" \"npm run nuxt-dev\"",
    "dev": "docker-compose -f docker-compose.yml up --build",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate"
  },
  "dependencies": {
    "@nuxtjs/auth": "^4.9.1",
    "@nuxtjs/axios": "^5.10.3",
    "@nuxtjs/dotenv": "^1.4.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "nuxt": "^2.0.0",
    "randomstring": "^1.1.5",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@nuxtjs/vuetify": "^1.0.0",
    "nodemon": "^1.18.9",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0"
  }
}
